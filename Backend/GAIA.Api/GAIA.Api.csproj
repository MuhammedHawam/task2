  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\gaia.client\gaia.client.esproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
    <ProjectReference Include="..\GAIA.Core\GAIA.Core.csproj" />
    <ProjectReference Include="..\GAIA.Infra\GAIA.Infra.csproj" />
    <ProjectReference Include="..\GAIA.Infra.EFCore\GAIA.Infra.EFCore.csproj" />
  </ItemGroup>

