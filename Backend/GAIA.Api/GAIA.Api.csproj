    <UserSecretsId>629657a1-48f0-4886-84ae-ad0e3608f127</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <SpaRoot>..\Frontend\gaia.client</SpaRoot>
