{
  "openapi": "3.0.4",
  "info": {
    "title": "GAIA API",
    "description": "GAIA backend HTTP API",
    "version": "v1"
  },
  "paths": {
    "/api/Ai/chat": {
      "post": {
        "tags": [
          "Ai"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            },
            "text/json": {
              "schema": {
                "type": "string"
              }
            },
            "application/*+json": {
              "schema": {
                "type": "string"
              }
            }
          }
