    "/assessments": {
      "get": {
        "tags": [
          "Assessments"
        ],
        "summary": "Get assessments",
        "description": "Returns the available assessments.",
        "operationId": "getAssessments",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AssessmentResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Assessments"
        ],
        "summary": "Create new assessments",
        "description": "Returns the created assessment ID.",
        "operationId": "createAssessment",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAssessmentRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAssessmentRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAssessmentRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AssessmentResponse"
                }
              }
            }
          }
        }
      }
    },
    "/assessments/{id}": {
      "get": {
        "tags": [
          "Assessments"
        ],
        "summary": "Get assessment by ID",
        "description": "Returns the assessment details for the specified ID.",
        "operationId": "getAssessmentById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/assessments/configuration/options": {
      "get": {
        "tags": [
          "Assessments"
        ],
        "summary": "Retrieves the available assessment configuration options grouped by framework.",
        "description": "Provides the list of frameworks along with their supported assessment depths and scoring profiles.\r\n            \r\nSample request:\r\n```GET /assessments/configuration/options```\r\n            \r\nSample response:\r\n{\r\n  \"frameworks\": [\r\n    {\r\n      \"id\": \"ad2c63f9-b856-4e36-91f9-5da7b42e1f33\",\r\n      \"name\": \"Cybersecurity Maturity\",\r\n      \"assessmentDepths\": [\r\n        { \"id\": \"982b6a76-a312-46c5-9a9d-34175e5b56dd\", \"name\": \"Initial\", \"depth\": 1 }\r\n      ],\r\n      \"assessmentScorings\": [\r\n        { \"id\": \"d758ff3c-fb19-4a88-bb29-9a48b204361e\", \"name\": \"Bronze\" }\r\n      ]\r\n    }\r\n  ]\r\n}\r\n            \r\nPossible status codes:\r\n* 200 - Configuration options retrieved successfully.\r\n* 500 - An unexpected error occurred while retrieving the options.",
        "operationId": "getAssessmentConfigurationOptions",
        "responses": {
          "200": {
            "description": "Configuration options retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FrameworkConfigurationOptionsResponse"
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error while retrieving configuration options."
          }
        }
      }
    },
    "/api/Assessment/CreateAssessmentFirstStep": {
      "post": {
        "tags": [
          "Assessments"
        ],
        "summary": "Create the first step of an assessment",
        "description": "Creates the basic assessment details (name, dates, organization, language) and returns the persisted data.",
        "operationId": "createAssessmentFirstStep",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAssessmentFirstStepRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAssessmentFirstStepRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAssessmentFirstStepRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Assessment first step created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AssessmentFirstStepResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/Assessment/UpdateAssessmentFirstStep": {
      "put": {
        "tags": [
          "Assessments"
        ],
        "summary": "Update the first step of an assessment",
        "description": "Updates the previously saved first-step details for the specified assessment.",
        "operationId": "updateAssessmentFirstStep",
        "parameters": [
          {
            "name": "assessmentId",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAssessmentFirstStepRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAssessmentFirstStepRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAssessmentFirstStepRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Assessment first step updated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AssessmentFirstStepResponse"
                }
              }
            }
          },
          "404": {
            "description": "Assessment first step not found."
          }
        }
      }
    },
    "/api/Assessment/FirstSteps": {
      "get": {
        "tags": [
          "Assessments"
        ],
        "summary": "Get assessment first steps",
        "description": "Returns the first-step metadata for all assessments.",
        "operationId": "getAssessmentFirstSteps",
        "responses": {
          "200": {
            "description": "Assessment first steps retrieved.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AssessmentFirstStepResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/Assessment/FirstSteps/{assessmentId}": {
      "get": {
        "tags": [
          "Assessments"
        ],
        "summary": "Get assessment first step by ID",
        "description": "Returns the first-step details for the specified assessment.",
        "operationId": "getAssessmentFirstStepById",
        "parameters": [
          {
            "name": "assessmentId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Assessment first step retrieved.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AssessmentFirstStepResponse"
                }
              }
            }
          },
          "404": {
            "description": "Assessment first step not found."
          }
        }
      }
    }
  },
